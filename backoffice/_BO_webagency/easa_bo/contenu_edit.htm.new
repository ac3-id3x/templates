<script>
function ShowDel () {
		
	if (confirm("Confirmer la suppression du texte $$FORM:TITRE$$?"))
		location.href="easa_bo,txt_del.htm?idCategorie=$$REP:1$$&idTexte=$$FORM:IDTEXTE$$&redirect=/easa_bo,cat_edit.htm?idCategorie=$$REP:1$$"
		
	return false;		
}
function Activer (actif) {
		
	if (confirm("Confirmer la modification du texte $$FORM:TITRE$$  (idTexte=$$FORM:IDTEXTE$$) ?"))
		location.href="/easa_bo,txt_active.htm?idCategorie=$$REP:1$$&idTexte=$$FORM:IDTEXTE$$&redirect=$$REP:PAGE urlencode$$&actif="+actif		
		
	return false;	
