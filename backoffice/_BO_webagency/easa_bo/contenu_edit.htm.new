        <script>

        var addpicurl="/$$FORM:IDTEXTE$$/easa_bo,cat_pic.htm";

		var sBasePath = '/z/backoffice/fckeditor/';
		
        function initDescrHtml() 
        {
          var oFCKdescription = new FCKeditor( 'Description' ) ;
          oFCKdescription.BasePath	= sBasePath ;
          oFCKdescription.ToolbarSet="zed";
          oFCKdescription.Config['ImageBrowserURL'] = addpicurl;
          oFCKdescription.Config['ToolbarStartExpanded'] = false ;
          oFCKdescription.ReplaceTextarea() ;
          var o = document.getElementById('setinitDescrHtml');
          o.style.display='none';
        }
      
        window.onload = function()
        {
          var oFCKtexte=new FCKeditor( 'Texte' ) ;
          oFCKtexte.BasePath	= sBasePath ;
          oFCKtexte.ToolbarSet="zed";
          oFCKtexte.Config['ImageBrowserURL'] = addpicurl;
          oFCKtexte.Config['ToolbarStartExpanded'] = false ;
          oFCKtexte.ReplaceTextarea() ;
       }
              
        function DoSave() 
        {
          document.forms['sauve'].submit();
        }
