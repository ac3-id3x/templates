@import "color";
// BG SOLO
$bg-uni:yes;

// PICTURE BG OU DEGRADE CSS BG COLOR PRIMARY vs SECONDARY vs BLOCK > SI NO ALL = BG BODY UNI
$picture-bg:yes;
$picture-bg-url:'../images/dark_wall.png';
$picture-bg-repeat-horizontal:no;

// SIZE SCROLLING
$height-scrolling:775;

// SIZE NAVIGATION
$height-navigation:120;



// VAR SITE TYPO
$font-body:"Source Sans Pro",verdana,sans-serif;
$font-title:"Oswald",arial,sans-serif;

// REFINE DEPENDS OF YOUR TYPO, DEFINE FIRST >>>> FONT-SIZE-TEXT
$font-size-text:1.4em;
$font-size-title:2.0em;

// TYPE TITLE = CAPITALIZE, UPPERCASE, LOWERCASE, NONE
$type-title:uppercase;

// WEIGHT TITLE = BOLD, NORMAL, etc..
$weight-title:normal;

// ARRONDI POUR LES EFFETS SUR LI > A:HOVER/FIL ARIANE/BOUTON
$arrondi:no;

// IMPORT ALL = FUNCTIONS SASS/COMPASS
@import "../../../slagence_X_V5/sources/scss/all";

// IMPORT PICTOS
@import "../../../slagence_X_V5/sources/scss/typicons/icov5/icov5";
@import "../../../slagence_X_V5/sources/scss/typicons/fundicons/foundation_icons_social/social_foundicons";
@import "../../../slagence_X_V5/sources/scss/typicons/fundicons/foundation_icons_general/general_foundicons";
@import "../../../slagence_X_V5/sources/scss/typicons/fundicons/foundation_icons_general_enclosed/general_enclosed_foundicons";

// IMPORT BOUTONS LIB2
@import "../../../slagence_X_V5/sources/scss/boutons/lib2";

// IMPORT PUB LIB BOITE
@import "../../../slagence_X_V5/sources/scss/pubs/lib1";

// IMPORT PUB LIB6
@import "../../../slagence_X_V5/sources/scss/pubs/lib6";

// IMPORT TEMPLATE PARIS
@import "../../../slagence_X_V5/sources/scss/templates/helsinki";

// IMPORT MODULE ANNONCES11
@import "../../../slagence_X_V5/sources/scss/modules/annonces11";

// IMPORT MODULE EXTRA
@import "../../../slagence_X_V5/sources/scss/extra/extra2";

// IMPORT MEDIA QUERY ALL
@import "../../../slagence_X_V5/sources/scss/media";

// IMPORT IE FIXING
@import "../../../slagence_X_V5/sources/scss/ie";

// IMPORT MODULE SOUS MENU
@import "../../../slagence_X_V5/sources/scss/sous_menu/lib1";

.menu-principal>li>a {
padding: 0px 6px;
}


//--------------------------------------------------------------------------------------
//		PERSO XXXNOMAGENCE
//--------------------------------------------------------------------------------------

/* AUTRES TEMPLATE */
.container {
    width: 1280px;
    @media only screen and (max-width : 1280px) {
        width: 960px
    }
}


//--------------------------------------------------------------------------------------
//		MENU & NAV
//--------------------------------------------------------------------------------------

.logo img {
	padding: 3px 1px;
}


@media only screen and (max-width : 767px) {
header .logo img {
width: 60%;
}
}

.menu-principal>li>a {
color:#b3b3b3;
padding: 1px 14px;
font-size:0.9em;
&:hover {
color:#cccccc;
color:#222222;
}
}



//--------------------------------------------------------------------------------------
//		INDEX
//--------------------------------------------------------------------------------------

.zone-pub{ height:320px; }
.zone-pub p {min-height:75px;}

.icon-v5-heart:before{ color:$color-icone-cdc;}
.icon-v5-heart.opacity-4{ opacity:1;}

.bouton-rechercher-moteur  {background-image: linear-gradient(to bottom, $color-action 0%, $color-action 10%);
    background-size: 100% auto;
    color: #fff;
    border: 1px solid $color-action;
&:hover {    
    background-image: linear-gradient(to bottom, #62c8e3 0%, $color-action 10%);
}
}


//--------------------------------------------------------------------------------------
//		FOOTER
//--------------------------------------------------------------------------------------
.texte-info-agences {font-size:1.2em;}